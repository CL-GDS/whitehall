  name: "edition[news_article_type_id]",
  id: "edition_news_article_type_id",
  label: "News article type",
  heading_size: "s",
  full_width: true,
  value: edition.news_article_type_id,
  error_message: errors_for(edition.errors, :news_article_type_id),
